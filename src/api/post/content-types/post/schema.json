{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "post",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "short_description": {
      "type": "string",
      "required": true,
      "unique": false,
      "maxLength": 150,
      "minLength": 6
    },
    "isHomeSlider": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::category.category",
      "mappedBy": "post"
    },
    "Slug": {
      "type": "uid"
    },
    "content": {
      "type": "richtext",
      "default": "Content"
    },
    "preview": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "SEO": {
      "type": "component",
      "repeatable": false,
      "component": "seo.meta",
      "required": true
    },
    "banner": {
      "type": "component",
      "repeatable": false,
      "component": "post.banner",
      "required": true
    }
  }
}
